- %w(60 72 76 114 120 144 152 180).each do |size|
  - if File.exist?("/favicon/apple-touch-icon-#{size}x#{size}.png")
    = favicon_link_tag "/favicon/apple-touch-icon-#{size}x#{size}.png", rel: 'apple-touch-icon', type: 'image/png', sizes: "#{size}x#{size}"

- %w(192).each do |size|
  - if File.exist?("/favicon/android-icon-#{size}x#{size}.png")
    = favicon_link_tag "/favicon/android-icon-#{size}x#{size}.png", rel: 'icon', type: 'image/png', sizes: "#{size}x#{size}"

- %w(16 32 96).each do |size|
  - if File.exist?("/favicon/favicon-#{size}x#{size}.png")
    = favicon_link_tag "/favicon/favicon-#{size}x#{size}.png", rel: 'icon', type: 'image/png', sizes: "#{size}x#{size}"
